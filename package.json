{
  "publisher": "wChenonly",
  "name": "git-need-pull",
  "displayName": "git-need-pull",
  "version": "0.0.1",
  "packageManager": "pnpm@8.15.5",
  "description": "Check the status bar to see if there is a code update in the current git repository.",
  "author": "wChenonly",
  "license": "MIT",
  "homepage": "https://github.com/wChenonly/vscode-git-need-pull#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/wChenonly/vscode-git-need-pull"
  },
  "bugs": {
    "url": "https://github.com/wChenonly/vscode-git-need-pull/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.87.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint . --fix",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.11.0",
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.87.0",
    "@vscode/vsce": "^2.24.0",
    "bumpp": "^9.4.0",
    "execa": "^8.0.1",
    "nano-staged": "^0.8.0",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3"
  },
  "nano-staged": {
    "*.{ts,tsx,js,jsx,vue,less,css,md}": "eslint . --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged"
  },
  "changelog": {
    "authorName": true,
    "authorEmail": false
  }
}
